<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <!-- NOTE: We wouldn't usually build a domain this way. -->
    <!-- Consider this a simple example of dependency injection. -->

    <bean id="knob" class="domain.contruction.impl.SilverHandle"/>

    <bean id="door" class="domain.contruction.impl.RedDoor">
        <constructor-arg ref="knob"/>
    </bean>

    <bean id="fence" class="domain.contruction.impl.PicketFence"/>

    <bean id="house" class="domain.contruction.impl.LittleHouse">
        <constructor-arg ref="fence"/>
        <constructor-arg ref="door"/>
    </bean>

</beans>